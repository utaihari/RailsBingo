<h2>ログイン</h2>
<% if @isDirectGame %>
<%= devise_error_messages! %>
  <%= form_for(@user, url: user_session_direct_game_path(@community_id,@room_id))  do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password,"パスワード"%><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "次回以降自動でログイン" %>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "ログインしてビンゴに参加" %>
    </div>
  <% end %>
<% else %>
<%= devise_error_messages! %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password,"パスワード"%><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "次回以降自動でログイン" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>
