<%= javascript_include_tag "communities" %>

<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">bkLib.onDomLoaded('community-detail');</script>

<div class="center70">
<h2>コミュニティ情報変更</h2>

<%= form_for(@community, url: community_path(@community.id)) do |f| %>

<div class="form-group">
 <%= f.label :name,"名前" %><br />
 <%= f.text_field :name %>
</div>

<div class=”controls”>
<p>コミュニティの説明</p>
<%= f.text_area :detail, rows: 10, cols: 40, :style => 'width: 100%', :id => 'community-detail' %>
</div>

<div class="actions">
  <%= f.submit "更新" , class: "btn btn-info"%>
</div>
<% end %>

<h3>このコミュニティを削除</h3>

<p> <%= button_to "削除", community_path(@community.id),class: "btn btn-danger" ,data: { confirm: "本当に削除しますか?" }, method: :delete %></p>
</div>