<%= javascript_include_tag "Squire-UI.js" %>
<%= javascript_include_tag "squire-raw.js" %>
<%= javascript_include_tag "communities" %>

<%= javascript_tag do %>
var $community_detail = '<%= raw @community.detail.gsub("'", "\\\\'") %>';
<% end %>

<div class="center70">
<h2>コミュニティ情報変更</h2>

<%= form_for(@community, url: community_path(@community.id), html: { method: :put }) do |f| %>

<div class="form-group">
 <%= f.label :name,"名前" %><br />
 <%= f.text_field :name %>
</div>

<div class="form-group">
<p>コミュニティの説明</p>
<%= f.text_field :detail, :class => 'form-control',:style =>'display:none' %>
<%= f.text_area :detail, :id=>"seditor" %>
</div>

<div class="actions">
  <%= f.submit "更新" %>
</div>
<% end %>

<h3>このコミュニティを削除</h3>

<p> <%= button_to "削除", community_path(@community.id),class: "btn btn-danger" ,data: { confirm: "本当に削除しますか?" }, method: :delete %></p>
</div>