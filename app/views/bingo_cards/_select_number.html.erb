<div id="select_notice"></div>
<table boder = "3" id="select-number" align="center">
	<thead>
		<tr class="bingo_char">
			<th class="text-center">B</th>
			<th class="text-center">I</th>
			<th class="text-center">N</th>
			<th class="text-center">G</th>
			<th class="text-center">O</th>
		</tr>
	</thead>
	<%i=0%>
	<% numbers.each do |num|%>
	<% if i == 0 || i == 5 || i == 10 || i == 15  || i == 20 then %>
	<tr>
		<%end%>
		<% if num > 0 %>
		<td data-number=<%= num %> class="bingo-number text-center">
			<button id=select-number-<%= num %> data-remodal-action="confirm" onclick="use_item_select_number(<%= item_id %>, <%= num %>)"><%= num %></button>
		</td>
		<% else %>
		<td class="bingo-number free text-center" data-number=-1>FREE</td>
		<% end %>
		<%i += 1%>
		<% if i == 5 || i == 10 || i == 15  || i == 20 || i == 25then %>
	</tr>
	<%end%>
	<%end%>
</table>